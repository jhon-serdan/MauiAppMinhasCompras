<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    
    <VerticalStackLayout>
        <Label Text="Novo Produto"
               Margin="50,10,10,10"
               FontSize="17">
        </Label>

        <Frame Margin="10,0,10,10">

            <VerticalStackLayout >

                <Label Text="Descrição:"/>
                <Entry Margin="0,5,0,0"
                       Placeholder="Digite a descrição do item"/>

                <Label Margin="0,10,0,0"
                       Text="Quantidade:"/>
                <Entry Margin="0,5,0,0"
                       Placeholder="Informe a quantidade"
                       Keyboard="Numeric"/>

                <Label Margin="0,10,0,0"
                       Text="Preço:"/>
                <Entry Margin="0,5,0,0"
                       Placeholder="Informe o preço do item"
                       Keyboard="Numeric"/>


            </VerticalStackLayout>
            
        </Frame>

        <Grid ColumnDefinitions="*,*"
              Margin="10,10,10,10">

            <Button Text="Voltar"
                    Margin="0,0,10,0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    Clicked="Button_Clicked_Voltar_Home"/>
            
            <Button Text="Adicionar Item"
                    Margin="10,0,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand"/>

        </Grid>

    </VerticalStackLayout>
</ContentPage>